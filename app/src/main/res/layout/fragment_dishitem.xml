<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dish_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/dishImage"
        android:layout_width="@dimen/dish_item_height"
        android:layout_height="@dimen/dish_item_height"
        app:srcCompat="@mipmap/app_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dishName"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_margin="@dimen/dish_name_text_margin"
            android:layout_weight="1"
            android:text="mockTitle"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dishDescription"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="@dimen/dish_desc_text_margin"
            android:layout_weight="1"
            android:text="mock description2"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
